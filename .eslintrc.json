{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "standard",
    "plugin:jest/recommended",
    "plugin:promise/recommended",
    "plugin:react/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "jest",
    "promise",
    "react",
    "react-hooks",
    "sort-destructure-keys",
	"@typescript-eslint"
  ],
  "rules": {
    "indent": ["error", 2],
	"no-console": "error",
    "no-dupe-class-members": "off",
	"prefer-template": "error",
	"quotes": ["error", "single"],
	"semi": ["error", "always"]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
